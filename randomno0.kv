#:kivy 1.10.1

RootWidget:
    # import container
    container: container

# background
    FloatLayout:
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos:0, 0
                size:1080, 2400

# title
    FloatLayout:
        canvas:
            Color:
                rgba: 0.08, 0.41, 0.76, 1
            Rectangle:
                pos:22.4, 1772.8*1.25
                size: 1036.8, 67.2*1.25

            Rectangle:
                pos:6.4, 1708.8*1.25
                size: 1068.8, 80*1.25
            Line:
                rounded_rectangle:22.4, 1772.8*1.25, 1036.8, 60*1.25, 0, 0, 9.6, 9.6, 30
                width:16

# history
    FloatLayout:

        canvas.before:
            Color:
                rgba: 0.05, 0.29, 0.64, 1
            Line:
                rounded_rectangle:22.4, 22.4*1.25, 1036.8, 67.2*1.25, 9.6, 9.6, 0, 0, 30
                width:16
            Rectangle:
                pos:6.4, 32*1.25
                size: 1068.8, 617.6*1.25

        # Up Line
        canvas.after:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                points: [96, 614.4*1.25, 985.6, 614.4*1.25]
                width:4.8
        Label:
            text: root.his_no
            font_size:48
            pos:448, 400*1.25 #297.6
            size_hint:None,None
            color: 1, 1, 1, 1
            text_size:960, 288*1.25
            halign:'left'
            valign:'top'
        Label:
            text: root.his_no_sort
            font_size:48
            pos:448, 100*1.25 #0
            size_hint:None,None
            color: 1, 1, 1, 1
            text_size:960, 288*1.25
            halign:'left'
            valign:'top'

# show_random_NO
    FloatLayout:
        canvas:
            Color:
                rgba: 0.13, 0.61, 0.96, 1
            Rectangle:
                pos:6.4, 617.6*1.25
                size: 1068.8, 1107.2*1.25

        Button:
            id: set
            background_normal: '2.png'
            background_down: '1.png'
            # pos_hint:{'x':.172, 'y':.29}
            pos:438.4, 576*1.25
            size_hint:None,None
            size:192, 192
            on_press: root.confim()
        Label:
            text: root.ran_no
            font_size:root.f_s
            #pos_hint:{'x':.2, 'y':.56}
            text_size:1068.8,896*1.25
            halign:'center'
            valign:'middle'
            pos:466, 1024*1.25 #416, 1024
            size_hint:None,None
            color: 1, 1, 1, 1

# button_textinput
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.05, 0.29, 0.64, 1
        canvas:
            # Under Line
            Color:
                rgba: 1, 1, 1, 1
            Line:
                points: [96, 313.6*1.25, 985.6, 313.6*1.25]
                width:3.84
            # Top Line
            Line:
                points: [96, 1728*1.25, 985.6, 1728*1.25]
                width:3.84
            Line: #  Min_No
                points: [380, 576*1.25 + 198, 690, 576*1.25 + 198]
                width:3.2

        Button:
            # id: clear
            background_normal: '4.png'
            background_down: '6.png'
            pos:438.4, 1568*1.28
            size_hint:None,None
            size:192, 192
            on_press:root.next_screen('clearnot')

        TextInput:
            id: textinput_list
            text:root.min_show
            font_size:58
            pos:380, 576*1.25 + 200
            size_hint:None,None
            size:310, 96*1.25
            multiline: False
            background_normal:''
            background_active:''
            background_color:0.13, 0.61, 0.96, 1
            padding_x:[3.2,0]
            padding_y:[25.6,0]
            on_text: self.foreground_color = (1,1,1,1)
            input_filter:'int'
            halign:'center'
            valign:'middle'

        Label:
            text: 'list'
            font_size:58
            pos:500, 576*1.25 + 260
            size_hint:None,None
            size:64.9, 1.6*1.25
            color: 1, 1, 1, .3

    BoxLayout:
        id: container
        canvas:
            Color:
                rgba: 0, 0, 0, 0
            Rectangle:
                pos:6.4, 768*1.25
                size: 1068.8, 800*1.25
