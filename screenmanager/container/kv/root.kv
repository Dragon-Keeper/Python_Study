#:kivy 1.8.0

RootWidget:
    # import container
    container: container
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 6
        Label:
            font_size: 42
            color:1, 1, 0, 1
            text: 'Root11111'

        # bottom-left part:
        BoxLayout:
            orientation: 'horizontal'
            padding: 0
            spacing: 6
            Label:
                font_size: 42
                color:1, 1, 0, 1
                text: 'Root22222'

            # bottom-left
            BoxLayout:
                size_hint: 0.12, 0.12
                orientation: 'vertical'
                padding: 0
                spacing: 6
                Label:
                    font_size: 42
                    color:1, 1, 0, 1
                    text: 'Root33333'

                # option calibrate
                Button:
                    text: 'Start'
                    on_release: app.next_screen('1')

            # create container (bottom-right)----when page change ,here will change
            BoxLayout:
                id: container

                Label:
                    font_size: 42
                    color:1, 1, 0, 1
                    text: 'Root44444'
