#:kivy 1.8.0
#:import datetime datetime

RootWidget:
    # import container
    container: container

    # fill the container
    BoxLayout:
        id: container
        orientation: 'horizontal'
        padding: 250  # decide Label's Y_position
        spacing: 300

        Label:
            # text: 'Clear Or Not'
            font_size:50

            Button:
                id: back
                size_hint: 0.2, 1
                pos:50, 300
                text: 'Back'
                # on_release: root.next_screen('randomno')
                on_release: root.next_screen('clearnot2')

            Button:
                id: clear
                size_hint: 0.2, 1
                pos:200, 300
                text: 'Clear'
                on_release: root.confim2()
