#:kivy 1.8.0
#:import datetime datetime

RootWidget:
    # import container
    container: container

    # fill the container
    BoxLayout:
        id: container
        # padding: 50, 100  # decide Label's Y_position
        # spacing: 50
        canvas:
            Color:
                rgba: 0, 0, 0, root.clearnot_color
            Rectangle:
                pos:0, 0
                size: 337.5, 600

        Label:
            #text: 'Back Or Clear'
            font_size:50
            color:1, 1, 1, 1

            Button:
                id: back
                background_normal: 'back-1.png'
                background_down: 'back-2.png'
                size_hint:None,None
                size:90, 120
                pos:60, 270
                # on_release: root.next_screen('randomno')
                on_release: root.next_screen('clearnot2')

            Button:
                id: clear
                background_normal: 'clear-1.png'
                background_down: 'clear-2.png'
                size_hint:None,None
                size:90, 120
                pos:200, 270
                on_release: root.confim2()
