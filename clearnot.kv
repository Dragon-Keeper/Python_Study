#:kivy 1.8.0
#:import datetime datetime

RootWidget:
    # import container
    container: container

    # fill the container
    BoxLayout:
        id: container
        # padding: 50, 100  # decide Label's Y_position
        # spacing: 50
        canvas:
            Color:
                rgba: 0, 0, 0, root.clearnot_color
            Rectangle:
                pos:0, 0
                size: 1080, 1920*1.25

        Label:
            #text: 'clearnot'
            font_size:160
            color:1, 1, 1, 1

            Button:
                id: back
                background_normal: 'back-1.png'
                background_down: 'back-2.png'
                size_hint:None,None
                size:288, 384
                pos:192, 900
                # on_release: root.next_screen('randomno')
                on_release: root.next_screen('clearnot2')

            Button:
                id: clear
                background_normal: 'clear-1.png'
                background_down: 'clear-2.png'
                size_hint:None,None
                size:288, 384
                pos:640, 900
                on_release: root.confim2()

            Button:
                id: T-one
                background_normal: 'T-one-1.png'
                background_down: 'T-one-2.png'
                size_hint:None,None
                size:288, 384
                pos:192, 1348
                on_release: root.next_screen('randomno0')

            Button:
                id: nor-ran
                background_normal: 'nor-ran-1.png'
                background_down: 'nor-ran-2.png'
                size_hint:None,None
                size:288, 384
                pos:640, 1348
                on_release: root.next_screen('randomno')
