#:kivy 1.10.1
#:import kivy kivy

RootWidget:
    # import container
    container: container

# background
    FloatLayout:
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos:0, 0
                size_hint:1, 1

# title
    FloatLayout:
        canvas:
            Color:
                rgba: 0.08, 0.41, 0.76, 1
            Rectangle:
                pos:22.4, 1772.8
                size: 1036.8, 67.2

            Rectangle:
                pos:6.4, 1708.8
                size: 1068.8, 80
            Line:
                rounded_rectangle:22.4, 1772.8, 1036.8, 60, 0, 0, 9.6, 9.6, 30
                width:16

# history
    FloatLayout:

        canvas.before:
            Color:
                rgba: 0.05, 0.29, 0.64, 1
            Line:
                rounded_rectangle:22.4, 22.4, 1036.8, 67.2, 9.6, 9.6, 0, 0, 30
                width:16
            Rectangle:
                pos:6.4, 32
                size: 1068.8, 617.6

        # Up Line
        canvas.after:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                points: [96, 614.4, 985.6, 614.4]
                width:4.8
        Label:
            text: root.his_no
            font_size:48
            pos:448, 400 #297.6
            size_hint:None,None
            color: 1, 1, 1, 1
            text_size:960, 288
            halign:'left'
            valign:'top'
        Label:
            text: root.his_no_sort
            font_size:48
            pos:448, 100 #0
            size_hint:None,None
            color: 1, 1, 1, 1
            text_size:960, 288
            halign:'left'
            valign:'top'

# show_random_NO
    FloatLayout:
        canvas:
            Color:
                rgba: 0.13, 0.61, 0.96, 1
            Rectangle:
                pos:6.4, 617.6
                size: 1068.8, 1107.2

        Button:
            id: set
            background_normal: '2.png'
            background_down: '1.png'
            # pos_hint:{'x':.172, 'y':.29}
            pos:438.4, 576
            size_hint:None,None
            size:192, 192
            on_press: root.confim()
        Label:
            text: root.ran_no
            font_size:root.f_s
            #pos_hint:{'x':.2, 'y':.56}
            text_size:1068.8,896
            halign:'center'
            valign:'middle'
            pos:466, 1024 #416, 1024
            size_hint:None,None
            color: 1, 1, 1, 1

# button_textinput
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.05, 0.29, 0.64, 1
        canvas:
            # Under Line
            Color:
                rgba: 1, 1, 1, 1
            Line:
                points: [96, 313.6, 985.6, 313.6]
                width:3.84
            # Top Line
            Line:
                points: [96, 1728, 985.6, 1728]
                width:3.84
            Line: #  Min_No
                points: [240, 627.2, 406.4, 627.2]
                width:3.2
            Line: #  Max_No
                points: [659.2, 627.2, 825.6, 627.2]
                width:3.2

        Button:
            # id: clear
            background_normal: '4.png'
            background_down: '6.png'
            pos:438.4, 1568
            size_hint:None,None
            size:192, 192
            on_press:root.next_screen('clearnot')

        TextInput:
            id: textinput_min
            text:root.min_show
            font_size:58
            pos:240, 630.4
            size_hint:None,None
            size:160, 96
            multiline: False
            background_normal:''
            background_active:''
            background_color:0.13, 0.61, 0.96, 1
            padding_x:[3.2,0]
            padding_y:[25.6,0]
            on_text: self.foreground_color = (1,1,1,1)
            input_filter:'int'

        TextInput:
            id: textinput_max
            text:root.max_show
            font_size:58
            pos:656, 630.4
            #size_hint: .07, .18
            size_hint:None,None
            size:160, 96
            multiline: False
            background_normal:''
            background_active:''
            background_color:0.13, 0.61, 0.96, 1
            padding_x:[3.2,0]
            padding_y:[25.6,0]
            on_text: self.foreground_color = (1,1,1,1)
            input_filter:'int'

        Label:
            text: 'Min'
            font_size:58
            pos:294.4, 665.6
            size_hint:None,None
            size:64.9, 1.6
            color: 1, 1, 1, .3
        Label:
            text: 'Max'
            font_size:58
            pos:713.6, 665.6
            size_hint:None,None
            size:64.9, 1.6
            color: 1, 1, 1, .3

    BoxLayout:
        id: container
        canvas:
            Color:
                rgba: 0, 0, 0, 0
            Rectangle:
                pos:6.4, 768
                size: 1068.8, 800
